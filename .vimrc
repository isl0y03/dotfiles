" global settings
set nowritebackup
set nobackup

" display
set number
set title

syntax on

set cmdheight=2
set laststatus=2 "always show status line

set list
set listchars=tab:^\ ,trail:-

colorscheme molokai

"editor
set expandtab
set tabstop=2
set softtabstop=2

set smartindent

set clipboard+=unnamed

set wildmenu

" search
set ignorecase
set smartcase

set incsearch

set hlsearch

set wrapscan

